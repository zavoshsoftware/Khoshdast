@model ViewModels.DashboardViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/FrontEnd/_FronEndLayout.cshtml";
}

<div class="breadcrumb_section bg_gray page-title-mini">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <div class="page-title">
                    <h1>داشبورد</h1>
                </div>
            </div>
            <div class="col-md-6">
                <ol class="breadcrumb justify-content-md-end">
                    <li class="breadcrumb-item"><a href="/">صفحه اصلی</a></li>
                    <li class="breadcrumb-item active">داشبورد</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="main_content bg-gray-list">

    <!-- START SECTION SHOP -->
    <div class="section">
        <div class="container">
            <div class="row">

                <div class="col-lg-3 col-md-4">
                    @Html.Partial("_CustomerDashboardMenuPartial")
                </div>
                <div class="col-lg-9 col-md-8">
                    @if (TempData["Message"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show d-flex flex-column justify-content-center" role="alert">
                            <p class=" py-2" alert-dismissible fade show" role="alert"
                               id="wrongEmail">@TempData["Message"].ToString()</p>
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>                        
                    }
                    <div class="tab-content dashboard_content">
                        <div class="tab-pane fade active show" id="dashboard" role="tabpanel" aria-labelledby="dashboard-tab">
                            <div class="card">
                                <div class="card-header">
                                    <h3>اطلاعات کاربری من</h3>
                                </div>
                                <div class="card-body">
                                    <div class="row profile-info-row">
                                        <div class="col-md-6">
                                            <div>
                                                <b>@Html.DisplayNameFor(t => t.FullName):</b>
                                                <span>@Model.FullName</span>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div>
                                                <b>@Html.DisplayNameFor(t => t.UserCellNumber):</b>
                                                <span>@Model.UserCellNumber</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row profile-info-row">
                                        <div class="col-md-6">
                                            <div>
                                                <b>@Html.DisplayNameFor(t => t.UserEmail):</b>

                                                <span>@Model.UserEmail</span>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div>
                                                <b>@Html.DisplayNameFor(t => t.CreationDateStr):</b>

                                                <span>@Model.CreationDateStr</span>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row profile-info-row">
                                        <div class="col-md-6">
                                            <div>
                                                <b>@Html.DisplayNameFor(t => t.TotalCompleteOrderCount):</b>
                                                <span>@Model.TotalCompleteOrderCount</span>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div>
                                                <b>@Html.DisplayNameFor(t => t.TotalNotCompleteOrderCount):</b>
                                                <span>@Model.TotalNotCompleteOrderCount</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

