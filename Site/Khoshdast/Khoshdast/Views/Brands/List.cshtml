@model ViewModels.BrandListViewModel
@{
		ViewBag.Title = "لیست برندها";
		Layout = "~/Views/Shared/FrontEnd/_FronEndLayout.cshtml";
		ViewBag.Canonical = "https://khoshdast.ir/brand";
}

<div class="breadcrumb_section bg_gray page-title-mini" style="background-color: #E1D9DA">
	<div class="container">
		<div class="row align-items-center">
			<div class="col-md-12">

				<div class="breadcrumb-custom">
					<ol class="breadcrumb">
						<li class="breadcrumb-item"><a href="/">صفحه اصلی</a></li>
						<li class="breadcrumb-item"><a href="/brand">برندها</a></li>

					</ol>
				</div>

				<div class="page-title">
					<h1>@ViewBag.Title </h1>
				</div>
			</div>

		</div>
	</div>
</div>

<div class="section">
	<div class="container">
		<div class="row">
			<div class="col-lg-12">


				<div class="row shop_container grid">
					@foreach (var brand in Model.Brands)
					{

							<div class="col-md-3 col-6">
								<div class="product brand-item">
									<div class="brand-item-img">
										<a href="/brand/@brand.UrlParam">
											<img src="@brand.BrandNameImageUrl"/>
										</a>
									</div>
									<div class="brand-item-title">
										<a href="/brand/@brand.UrlParam">
											@brand.Title
										</a>
</div>
									</div>
							</div>
					}


				</div>
			</div>

		</div>
	</div>
</div>